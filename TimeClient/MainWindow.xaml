<Window x:Class="TimeClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Time Client" Height="210" Width="600"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection Panel -->
        <GroupBox Grid.Row="0" Header="Connection Settings" Margin="10" Padding="10" 
                  Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Server IP:" Foreground="White" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="ServerIpTextBox" Text="127.0.0.1" Margin="5" Padding="5"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Server Port:" Foreground="White" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="ServerPortTextBox" Text="49152" Margin="5" Padding="5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Client Port:" Foreground="White" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="ClientPortTextBox" Text="49153" Margin="5" Padding="5"/>

                <Button Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" x:Name="ConnectButton" 
                        Content="Connect" Click="ConnectButton_Click" 
                        Margin="5" Padding="10,5" HorizontalAlignment="Right" Width="120"/>
            </Grid>
        </GroupBox>

        <!-- Time Display Area - removed, time shown in separate window -->

        <!-- Status Bar -->
        <StatusBar Grid.Row="1" 
                   Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" 
                   Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Disconnected" Margin="5"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="TimeTextBlock" Text="--:--:--" Margin="5" FontWeight="Bold"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>


